{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "standard",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "vue/no-v-html": "off",
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 3,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }
    ]
  }
}